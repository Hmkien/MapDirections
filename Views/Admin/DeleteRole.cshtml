@model MapDirections.Models.AppRole


<div class="container">
    <h3>Bạn chắc chắn muốn xóa bản ghi này? </h3>

    <dl class="row mt-2">
        <dt class="col-sm-2">
            Tên quyền
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>


    </dl>

    <form asp-action="DeleteRole">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex ">
            <div class="form-group mt-2">
                <input type="submit" value="Xóa" class="btn btn-danger" />
            </div>
            <div class="form-group mt-2" style="margin-left: 2em;">
                <a class="btn btn-outline-info" asp-action="Index">Quay lại</a>
            </div>
        </div>
    </form>
</div>
