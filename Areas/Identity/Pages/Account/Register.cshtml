@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
@{
    Layout = "_LayoutLogin";
}

<div class="row d-flex justify-content-center align-items-center" style="margin-top: 5%;">
    <div class="col-md-6 col-lg-4">
        <div class="card p-4">
            <h1 class="text-center text-info">Đăng Kí</h1>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div class="text-danger list-unstyled" id="validation-summary"></div>
                <div class="mb-1">
                    <label>Tên đăng nhập:</label>
                    <input type="text" id="Name" asp-for="Input.UserName" class="form-control">
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label>Mật khẩu:</label>
                    <input type="password" id="Password" asp-for="Input.Password" class="form-control">
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label>Email</label>
                    <input type="email" id="Email" asp-for="Input.Email" class="form-control">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mb-1">
                    <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                    <input type="password" id="ConfirmPassword" asp-for="Input.ConfirmPassword" class="form-control">
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-8">
                        <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl"
                            class="text-decoration-none float-start mt-2">Bạn
                            đã có tài khoản?</a>
                    </div>
                    <div class="col-4 mt-3">
                        <input type="submit" value="Đăng kí" class="btn btn-lg btn-primary btn-md float-end">
                    </div>
                </div>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
